---
import services from '@js/servicesObject.js';
---

<div class="w-full lg:max-w-full">
  <h1 class="text-white lg:text-5xl text-3xl font-bold text-center lg:my-20 mt-0 my-8">Sercivios</h1>
  {services.map((service, index) => (
    <div class={`flex w-full ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'} items-center my-12 lg:my-12 mt-0 observer-element`} data-animation-direction={`${index % 2 === 0 ? 'left' : 'right'}`}>
      <div class={`lg:w-3/5 w-full h-fit p-6 ${index % 2 === 0 ? 'lg:right-96' : 'lg:left-0'} bg-primary rounded-2xl z-10 shadow-2xl`}>
        <h3 class="text-secondary font-bold text-xl mb-2 uppercase">{service.title}</h3>
        <p class="text-secondary">{service.description}</p>
      </div>
    </div>
  ))}
</div>
