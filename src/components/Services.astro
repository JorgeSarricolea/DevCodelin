---
import services from '@js/servicesObject.js';
---

<div class="w-full lg:max-w-full">
  <h1 class="text-5xl font-bold text-center my-20">Sercivios</h1>
  {services.map((service, index) => (
    <div class={`flex w-full ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'} items-center my-12 observer-element`} data-animation-direction={`${index % 2 === 0 ? 'left' : 'right'}`}>
      <div class={`relative w-3/5 h-fit p-6 ${index % 2 === 0 ? 'right-0' : 'left-0'} bg-primary rounded-2xl z-10 shadow-2xl`}>
        <h3 class="text-secondary font-bold text-xl mb-2 uppercase">{service.title}</h3>
        <p class="text-secondary">{service.description}</p>
      </div>
    </div>
  ))}
</div>