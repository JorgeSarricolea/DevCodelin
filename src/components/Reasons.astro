---
import reasons from '@js/reasonsObject.js';
---

<div class="w-full max-w-full">
  <h1 class="text-5xl font-bold text-center my-8">¿Por qué DevGenie?</h1>
  {reasons.map((reason, index) => (
    <div class={`flex w-full ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'} items-center my-12`}>
      <img src={reason.image} alt={reason.title} class="max-h-80 object-cover rounded-2xl w-1/2"/>
      <div class={`absolute w-1/2 h-fit p-6 mt-32 ${index % 2 === 0 ? 'right-96' : 'left-96'} bg-primary rounded-2xl z-10`}>
        <h3 class="text-secondary font-bold text-xl mb-2 uppercase">{reason.title}</h3>
        <p class="text-secondary">{reason.description}</p>
      </div>
    </div>
  ))}
</div>
