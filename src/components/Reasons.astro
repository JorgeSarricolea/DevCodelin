---
import reasons from '@js/reasonsObject.js';
---

<div>
  <h1 class="text-5xl font-bold text-center my-8">¿Por qué DevGenie?</h1>
  {reasons.map((reason, index) => (
    <div class={`flex my-12 h-fit ${reason.position === 'right' ? 'justify-end' : 'justify-start'}`}>
      <div class="relative w-3/5">
        <img src={reason.image} alt={reason.title} class="relative h-2/4 w-full object-cover rounded-2xl" />
        <div class={`absolute bg-primary p-6 items-center justify-center top-48 rounded-2xl z-10 w-full ${reason.position === 'right' ? 'right-96' : 'left-96'}`}>
          <h3 class="text-secondary font-bold text-xl mb-2 uppercase">{reason.title}</h3>
          <p class="text-secondary">{reason.description}</p>
        </div>
      </div>
    </div>
  ))}
</div>
